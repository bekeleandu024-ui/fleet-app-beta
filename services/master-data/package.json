{
  "name": "master-data-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
     "postbuild": "node -e \"const fs=require('fs'),p=require('path');const src=p.join('src','db','migrations');const dst=p.join('dist','db','migrations');if(fs.existsSync(src)){fs.mkdirSync(dst,{recursive:true});for(const f of fs.readdirSync(src))fs.copyFileSync(p.join(src,f),p.join(dst,f));}\"",
    "start": "node dist/index.js",
    "migrate": "ts-node src/db/init.ts"
  },
  "dependencies": {
    "express": "^4.21.2",
    "pg": "^8.11.3",
    "kafkajs": "^2.2.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/node": "^20.19.24",
    "@types/pg": "^8.10.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
